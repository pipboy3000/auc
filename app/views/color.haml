%h2 カラー
.tabbable.tabs-left
  = haml :_left_tab
  .tab-content
    #list.tab-pane.active
      %form.form{action:url("/color"), method:"post"}
        %input{name:"_method", type:"hidden", value:"delete"}
        %table.table
          %thead
            %tr
              %th
              %th id
              %th 名前
              %th 作成日
              %th 更新日
          %tbody
            - @colors.each do |color|
              %tr
                %td
                  %input{type:"checkbox", name:"id_collection[]", value:color.id}
                %td
                  = color.id
                %td
                  %a{href:url("/color/#{color.id}")}
                    = color.name
                %td
                  = color.created_at
                %td
                  = color.updated_at
        .form-group
          %input.btn.btn-mini.btn-danger{type:"submit", value:"チェックしたカラーを削除"}
    #new.tab-pane
      %form.form-horizontal{action:url("/color"), method:"post"}
        .form-group
          %label.col-sm-3.control-label 名前
          .col-sm-9
            %input.form-control{type:"text", name:"name"}
        .form-group
          %label.col-sm-3.control-label 商品名の文字色
          .col-sm-9
            %input.form-control.color-picker{type:"text", name:"title"}
        .form-group
          %label.col-sm-3.control-label 枠の色
          .col-sm-9
            %input.form-control.color-picker{type:"text", name:"frame"}
        .form-group
          %label.col-sm-3.control-label 見出しの文字色
          .col-sm-9
            %input.form-control.color-picker{type:"text", name:"text1"}
        .form-group
          %label.col-sm-3.control-label テキストの文字色
          .col-sm-9
            %input.form-control.color-picker{type:"text", name:"text2"}
        .form-group
          %label.col-sm-3.control-label 見出しの背景色
          .col-sm-9
            %input.form-control.color-picker{type:"text", name:"bg1"}
        .form-group
          %label.col-sm-3.control-label テキストの背景色
          .col-sm-9
            %input.form-control.color-picker{type:"text", name:"bg2"}
        .form-group
          .cols-sm-9.col-sm-offset-3
            %input.btn.btn-primary{type:"submit"}
