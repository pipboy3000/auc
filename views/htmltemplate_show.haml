%h2 HTMLテンプレート ##{@htmltemplate.id} を編集
%form.form-horizontal{action:url("/html_template/#{@htmltemplate.id}"), method:"post"}
  %input{type:"hidden", name:"_method", value:"put"}
  .control-group
    %label.control-label テンプレート名
    .controls
      %input.span9{type:"text", name:"name", value:@htmltemplate.name}
  .control-group
    %label.control-label テンプレートの内容
    .controls
      %textarea.span9{rows:15, name:"contents"}= @htmltemplate.contents
  .form-actions
    %input.btn.btn-primary{type:"submit"}
