- if @flash
  .alert.alert-error
    %strong Error!
    = @flash
%h2 店舗
.tabbable.tabs-left
  = haml :_left_tab
  .tab-content
    #list.tab-pane.active
      %form{action:url("/shop"), method:"post"}
        %input{name:"_method", type:"hidden", value:"delete"}
        %input.btn.btn-mini.btn-danger{type:"submit", value:"チェックした店舗を削除"}
        %table.table.table-condensed
          %thead
            %tr
              %th
              %th id
              %th 店舗名
              %th 作成日
              %th 更新日
          %tbody
            - @shops.each do |shop|
              %tr
                %td
                  %input{type:"checkbox", name:"id_collection[]", value:shop.id}
                %td
                  =shop.id
                %td
                  %a{href:url("shop/#{shop.id}")}
                    =shop.name
                %td
                  =shop.created_at
                %td
                  =shop.updated_at

    #new.tab-pane
      %form.form-horizontal{action:url("/shop"), method:"POST"}
        .control-group
          %label.control-label 店舗名
          .controls
            %input{type:"text", name:"name"}
        - (1..9).each do |i|
          .control-group
            %label.control-label テンプレートの内容#{i}
            .controls
              %textarea.span8{name:"contents#{i}", rows:10}
              %span.help-block
                改行は&lt;br&gt;で表現してください。
        .form-actions
          %input.btn.btn-primary{type:"submit"}
