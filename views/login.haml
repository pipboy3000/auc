!!!5
%html
  %head
    %meta{name:"viewport", content:"width=device-width, initial-scale=1.0"}
    %link{rel:"stylesheet", href:url("/bootstrap/css/bootstrap.min.css")}
    %link{rel:"stylesheet", href:url("/bootstrap/css/bootstaap-responsive.min.css")}
    %link{rel:"stylesheet", href:url("/jquery.miniColors.css")}
    %link{rel:"stylesheet", href:url("/web.css")}
    %script{type:"text/javascript", src:url("/jquery-1.8.0.min.js")}
    %script{type:"text/javascript", src:url("/bootstrap/js/bootstrap.min.js")}
    %script{type:"text/javascript", src:url("/jquery.miniColors.min.js")}
    %script{type:"text/javascript", src:url("/web.js")}
  %body
    .container
      .row
      .span4.offset4
        .well
          %legend Log in to auc
          %form{action:url("/login"), method:"POST"}
            - if @flash
              .alert.alert-error
                %a.close{href:"#", :data => {dismiss:"alert"}}
                  != "&times;"
                %strong Error!
                = @flash
            %input.span3{type:"text", name:"username", placeholder:"username"}
            %input.span3{type:"password", name:"password", placeholder:"password"}
            %label.checkbox
              %input{type:"checkbox", name:"remember", value:"1"}Remember Me
            %button.btn.btn-primary{type:"submit"} Login

