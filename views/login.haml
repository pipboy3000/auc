!!!5
%html
  %head
    %meta{name:"viewport", content:"width=device-width, initial-scale=1.0"}
    %link{rel:"stylesheet", href:url("/css/auc.css")}
    %script{type:"text/javascript", src:url("/js/auc.min.js")}
  %body
    .container
      .row
      .span4.offset4
        .well
          %legend aucにログイン
          %form{action:url("/login"), method:"POST"}
            - if @flash
              .alert.alert-error
                %a.close{href:"#", :data => {dismiss:"alert"}}
                  != "&times;"
                %strong エラー
                = @flash
            %input.span3{type:"text", name:"username", placeholder:"username"}
            %input.span3{type:"password", name:"password", placeholder:"password"}
            %button.btn.btn-primary{type:"submit"} ログイン

