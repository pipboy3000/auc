%h2 カラー
.tabbable.tabs-left
  = haml :_left_tab
  .tab-content
    #list.tab-pane.active
      %form{action:url("/color"), method:"post"}
        %input{name:"_method", type:"hidden", value:"delete"}
        %input.btn.btn-mini.btn-danger{type:"submit", value:"チェックしたカラーを削除"}
        %table.table.table-condensed
          %thead
            %tr
              %th
              %th id
              %th 名前
              %th 作成日
              %th 更新日
          %tbody
            - @colors.each do |color|
              %tr
                %td
                  %input{type:"checkbox", name:"id_collection[]", value:color.id}
                %td
                  = color.id
                %td
                  %a{href:url("/color/#{color.id}")}
                    = color.name
                %td
                  = color.created_at
                %td
                  = color.updated_at
    #new.tab-pane
      %form.form-horizontal{action:url("/color"), method:"post"}
        .control-group
          %label.control-label 名前
          .controls
            %input{type:"text", name:"name"}
        .control-group
          %label.control-label 商品名の文字色
          .controls
            %input.color-picker{type:"text", name:"title"}
        .control-group
          %label.control-label 枠の色
          .controls
            %input.color-picker{type:"text", name:"frame"}
        .control-group
          %label.control-label 見出しの文字色
          .controls
            %input.color-picker{type:"text", name:"text1"}
        .control-group
          %label.control-label テキストの文字色
          .controls
            %input.color-picker{type:"text", name:"text2"}
        .control-group
          %label.control-label 見出しの背景色
          .controls
            %input.color-picker{type:"text", name:"bg1"}
        .control-group
          %label.control-label テキストの背景色
          .controls
            %input.color-picker{type:"text", name:"bg2"}
        .form-actions
          %input.btn.btn-primary{type:"submit"}
